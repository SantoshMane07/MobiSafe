<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_marginTop="2dp"
    android:elevation="5dp"
    android:id="@+id/contact_row"
    android:background="@color/light_purple"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/contacts_llrow"
        >
        <TextView
            android:id="@+id/contact_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ritesh Deshmukh"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/contact_user_number"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hey! there iam using Bzechat"
            android:textStyle="bold"
            android:textSize="15sp"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>